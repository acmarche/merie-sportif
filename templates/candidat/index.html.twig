{% extends '@AcMarcheMeriteSportif/layout_front.html.twig' %}

{% block body %}
    <div class="card bg-light mb-3">
        <div class="card-header">

            <div class="row">
                <div class="col-8">
                    <h3>Liste des candidats</h3>
                </div>
                <div class="col-4 d-print-none">
                    <a class="float-right btn btn-primary" href="{{ path('candidat_new') }}">
                        <i class="ti ti-plus"></i> Ajouter</a>
                </div>
            </div>
        </div>
        <div class="card-body">

            <div class="d-print-none">
                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="row">
                    <div class="col">
                        {{ form_row(form.nom) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.categorie) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.sport) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <button class="btn btn-primary" type="submit"><i class="ti ti-device-floppy"></i> Rechercher</button>
                    </div>
                </div>
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
            <br/>
            <table class="table table-bordered table-responsive-sm">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Sport</th>
                    <th>Cat√©gorie</th>
                </tr>
                </thead>
                <tbody>
                {% for candidat in candidats %}
                    <tr>
                        <td>
                            <a href="{{ path('candidat_show', {'uuid': candidat.uuid}) }}">
                                {{ candidat.nom }}</a>
                        </td>
                        <td>{{ candidat.prenom }}</td>
                        <td>{{ candidat.sport }}</td>
                        <td>{{ candidat.categorie }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
